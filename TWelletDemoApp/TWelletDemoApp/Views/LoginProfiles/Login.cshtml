@model TWelletDemoApp.Models.NameMatchLogin
@{
    Layout = null;
}
<link rel="stylesheet" href="~/thames/css/bootstrap.min.css">
@*<link rel="stylesheet" href="~/thames/css/azzara.min.css">*@
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>



<div class="container">

    <div class="row justify-content-center mt-5">
        <div class="col-md-4">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            }
            <!-- Success message with animation -->
            @if (ViewBag.LoginSuccess != null && ViewBag.LoginSuccess == true)
            {
                <div id="successMessage" class="alert alert-success text-center">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>

                <!-- JavaScript to handle redirection after 2 seconds -->
                <script>
                    setTimeout(function () {
                        window.location.href = '@Url.Action("GetAccountsRegisteredonaGivenDate", "AccountHolders")';
                    }, 2000); // Delay for 2 seconds
                </script>
            }
            else
            {
                <!-- Login Form with Icon -->
                <div class="card">
                    <div class="card-header text-center">
                        <i class="fas fa-user-astronaut fa-2x"></i>
                        <h3>Login</h3>
                    </div>
                    <div class="card-body">

                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label for="UserName">Username</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center mt-3">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<!-- jQuery for fade effect -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Fade out success message after 2 seconds
        $('#successMessage').fadeOut(2000);
    });
</script>

