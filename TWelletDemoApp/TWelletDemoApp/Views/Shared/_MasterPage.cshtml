    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Function to update the element with the given ID
            function updateElement(id, url) {
                fetch(url)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        document.getElementById(id).innerText = data;
                    })
                    .catch(error => {
                        console.error(`Error fetching data from ${url}:`, error);
                        document.getElementById(id).innerText = 'Server Not Responding';
                    });
            }

            // Fetch data for each element
            updateElement('userCount', '/AccountHolders/usercount');
            updateElement('RejectedCount', '/AccountHolders/RejectCounts');
            updateElement('ApprovedCount', '/AccountHolders/ApprovedCount');
            updateElement('Pending', '/AccountHolders/Pending');
        });
    </script>


